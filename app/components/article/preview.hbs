<div class='article-preview' ...attributes>
  <div class='article-meta'>
    <LinkTo @route='profiles.show' @model={{@article.author.username}}><img
        src='{{@article.author.image}}'
      /></LinkTo>

    <div class='info'>
      <LinkTo
        class='author'
        @route='profiles.show'
        @model={{@article.author.username}}
      >{{@article.author.username}}</LinkTo>
      <span class='date'>{{@article.createdAt}}</span>
    </div>
    {{#if this.session.isAuthenticated}}
      <button class='btn btn-outline-primary btn-sm pull-xs-right'>
        <i class='ion-heart'></i>
        {{@article.favoritesCount}}
      </button>
    {{else}}
      <LinkTo
        @route='users.login'
        class='btn btn-outline-primary btn-sm pull-xs-right'
      >
        <i class='ion-heart'></i>
        {{@article.favoritesCount}}
      </LinkTo>
    {{/if}}
  </div>
  <LinkTo @route='articles.show' class='preview-link' @model={{@article.slug}}>
    <h1>{{@article.title}}</h1>
    <p>{{@article.description}}</p>
    <span>Read more...</span>
    {{#if @article.tagList}}
      <ul class='tag-list'>
        {{#each @article.tagList as |tag|}}
          <li class='tag-default tag-pill tag-outline'>{{tag}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </LinkTo>
</div>
